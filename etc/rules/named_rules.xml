<!-- Official named rules for the OSSEC HIDS
  -  Author: Daniel B. Cid
  -  Date: Feb 28, 2006 (v0.2) - Added rule for log rotation (1904)
  -  Date: Nov 11, 2005 (v0.1)
  -->
      

<group name="named,syslog">
  <rule id="1900" level="0" noalert="1">
    <regex>^named[\d+]: </regex>
    <description>Grouping of the named rules</description>
  </rule>
  
  <rule id="1901" level="12">
    <if_sid>1900</if_sid>
    <match>dropping source port zero packet from</match>
    <description>Invalid DNS packet. Possibility of attack</description>
  </rule>

  <rule id="1902" level="9">
    <if_sid>1900</if_sid>
    <regex>^named[\d+]: denied AXFR from</regex>
    <description>Failed attempt to perform a zone transfer</description>
  </rule>

  <rule id="1903" level="0">
    <if_sid>1900</if_sid>
    <regex>^named[\d+]: denied update from|</regex>
    <regex>^named[\d+]: unapproved update from|</regex>
    <description>NSUpdate attempt. Generally mis-configuration</description>
    <info>http://seclists.org/lists/incidents/2000/May/0217.html</info>
  </rule>

  <rule id="1904" level="4">
    <if_sid>1900</if_sid>
    <regex>^named[\d+]: unable to rename log file</regex>
    <description>Log permission misconfiguration in Named</description>
  </rule>
</group> <!-- SYSLOG,NAMED -->
