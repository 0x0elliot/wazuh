<group name="apache">
  <rule id="3000" level="0" noalert="1">
    <decoded_as>apache-errorlog</decoded_as>
    <category>apache</category>
    <comment>Apache messages grouped</comment>
  </rule>    

  <rule id="3001" level="12">
    <if_sid>3000</if_sid>
    <regex>^[notice] child pid \d+ exit signal Segmentation Fault</regex>
    <comment>Sucessfull attack of the Apache encoding vulnerability</comment>
    <info>http://www.securityfocus.com/infocus/1633</info>
  </rule>

  <rule id="3002" level="9">
    <if_sid>3000</if_sid>
    <regex>^[error] [client \S+ \w+ denied by server configuration</regex>
    <comment>Attempt to access forbidden file or directory</comment>
  </rule>

  <rule id="3003" level="9">
    <if_sid>3000</if_sid>
    <regex>^[error] [client \S+ Directory index forbidden by rule</regex>
    <comment>Attempt to access forbidden directory index</comment>
  </rule>

  <rule id="3004" level="6">
    <if_sid>3000</if_sid>
    <regex>^[error] [client \S+ Client sent malformed Host header</regex>
    <comment>Code Red attack</comment>
    <info>http://www.cert.org/advisories/CA-2001-19.html</info>
  </rule>

  <rule id="3005" level="5">
    <if_sid>3000</if_sid>
    <regex>^[warn] [client \S+ [\d+] auth_ldap authenticate: </regex>
    <regex>user \S+ authentication failed</regex>
    <comment>User authentication failed</comment>
  </rule>

  <rule id="3006" level="9">
    <if_sid>3000</if_sid>
    <regex>^[error] [client \S+ user \S+ not found</regex>
    <comment>Attempt to login using a non-existent user</comment>
  </rule>

  <rule id="3007" level="5">
    <if_sid>3000</if_sid>
    <regex>^[error] [client \S+ user \S+: authentication failure</regex>
    <comment>User authentication failed.</comment>
  </rule>

  <rule id="3008" level="6">
    <if_sid>3000</if_sid>
    <regex>^[error] [client \S+ File does not exist: \S+default.ida$</regex>
    <comment>Code Red 2 attack</comment>
    <info>http://www.cert.org/incident_notes/IN-2001-09.html</info>
  </rule>
</group> <!-- ERROR_LOG,APACHE -->

<group name="apache-accesslog">
  <rule id="3100" level="0" noalert="1">
    <decoded_as>apache-accesslog</decoded_as>
    <category>apache</category>
    <comment>Apache messages grouped</comment>
  </rule>

  <rule id="3101" level="6">
    <if_sid>3100</if_sid>
    <url>cmd.exe|root.exe|_vti_bin|_mem_bin|msadc|c/winnt|d/winnt|</url>
    <url>/x90/|/xmlrpc|awstats.pl|default.ida</url>
    <comment>Common web attacks</comment>
  </rule>

  <rule id="3102" level="12">
    <if_sid>3101</if_sid>
    <id>200</id>
    <comment>A commom web attack returned code 200 (success)</comment>
  </rule>
  
</group> <!-- APACHE access log -->
<!-- EOF -->

