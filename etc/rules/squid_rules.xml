<group name="squid">
  <rule id="5000" level="0" noalert="1">
    <decoded_as>squid-accesslog</decoded_as>
    <category>squid</category>
    <description>Squid messages grouped</description>
  </rule>    

  <rule id="5001" level="5">
    <if_sid>5000</if_sid>
    <regex>\d+ \S+ TCP_DENIED/400</regex>
    <description>Bad request/Invalid syntax.</description>
  </rule>

  <rule id="5002" level="5">
    <if_sid>5000</if_sid>
    <regex>\d+ \S+ TCP_MISS/401</regex>
    <description>Unauthorized: Failed attempt to access authorization-required file or directory.</description>
  </rule>

  <rule id="5003" level="5">
    <if_sid>5000</if_sid>
    <regex>\d+ \S+ TCP_MISS/403</regex>
    <description>Forbidden: Attempt to access forbidden file or directory.</description>
  </rule>

  <rule id="5004" level="5">
    <if_sid>5000</if_sid>
    <regex>\d+ \S+ TCP_MISS/404</regex>
    <description>Not Found: Attempt to access non-existent file or directory.</description>
  </rule>

  <rule id="5005" level="5">
    <if_sid>5000</if_sid>
    <regex>\d+ \S+ TCP_DENIED/407</regex>
    <description>Proxy Authentication Required: User is not authorized to use proxy.</description>
  </rule>

  <rule id="5006" level="5">
    <if_sid>5000</if_sid>
    <regex>\d+ \S+ TCP_MISS/503</regex>
    <description>Service Unavailable: Attempt to access non-existent server.</description>
  </rule>

  <rule id="5051" level="10" frequency="7" timeframe="120">
    <if_matched_sid>5003</if_matched_sid>
    <same_source_ip />
    <description>Multiple attempts to access forbidden file or directory.</description>
  </rule>

  <rule id="5052" level="10" frequency="5" timeframe="120">
    <if_matched_sid>5005</if_matched_sid>
    <same_source_ip />
    <description>Multiple unauthorized attempts to use proxy.</description>
  </rule>

  <rule id="5053" level="10" frequency="7" timeframe="120">
    <if_matched_sid>5001</if_matched_sid>
    <same_source_ip />
    <description>Multiple Bad requests/Invalid syntax.</description>
  </rule>

  <rule id="5054" level="10" frequency="10" timeframe="120">
    <if_matched_sid>5004</if_matched_sid>
    <same_source_ip />
    <description>Multiple attempts to access a non-existent file.</description>
  </rule>
</group> <!-- ACCESSLOG,SQUID -->

