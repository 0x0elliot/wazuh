<var name="MCAFEE_ERROR">^259|^100|^1000|^1001|^1002|^1003|^1004|^1005|^1006|^1007|^1008|^5003|^5005|^5008|^5010|^5011|^5019|^5020|^5021|^5022|^5030|^5031|^5032|^5033|^5034|^5035|^5046|^5047|^5048|^5049|^5051|^5054|^5057|^5059|^5060|^5063|^5063</var> 
<var name="MCAFEE_WARN">^258|^5001|^5028|^5036|^5037|^5038|^5039|^5040|^5041|^5053|^5056|^5061|^5062|^5065</var> 
<var name="MCAFEE_INFO">^257|^5000|^5026|^5052|^5055</var> 
<var name="MCAFEE_VIRUS_OK">quarantined|moved to quarantine|file was deleted|deleted successfully|has been deleted|message deleted|deleted after|cleaned</var> 
<var name="MCAFEE_VIRUS">The file \.+ contain\w+ \.+|infected with|User defined detection|scan found|error attempting to clean</var>
<var name="MCAFEE_FREQ">10</var>

<group name="mcafee,">
  <rule id="07500" level="0">
    <if_sid>18101,18102,18103</if_sid>
    <category>windows</category>
    <extra_data>^McLogEvent</extra_data>
    <description>Grouping of McAfee Windows AV rules.</description>
  </rule>

  <rule id="07501" level="2">
    <if_sid>07500</if_sid>
    <match>$MCAFEE_INFO</match>
    <description>McAfee informational event</description>
  </rule>

  <rule id="07502" level="3">
    <if_sid>07500</if_sid>
    <match>$MCAFEE_WARN</match>
     <description>McAfee warning event</description>
  </rule>

  <rule id="07502" level="4">
    <if_sid>07500</if_sid>
    <match>$MCAFEE_WARN</match>
     <options>alert_by_email</options>
     <description>McAfee error event</description>
  </rule>

  <rule id="07503" level="12">
    <if_sid>07500</if_sid>
    <regex>$MCAFEE_VIRUS</regex>
    <group>virus</group>
    <description>Virus detected and not removed</description>
  </rule>

  <rule id="07504" level="7">
    <if_sid>07503</if_sid>
    <match>$MCAFEE_VIRUS_OK</match>
    <group>virus</group>
    <description>Virus detected and removed</description>
  </rule>

  <rule id="07505" level="7">
    <if_sid>07503</if_sid>
    <match>Will be deleted</match>
    <group>virus</group>
    <description>Virus detected and file will be deleted</description>
  </rule>

  <rule id="07506" level="3">
    <if_sid>07500</if_sid>
    <match>scan started|scan stopped</match>
    <description>Virus scan started or stopped</description>
  </rule>

  <rule id="07507" level="5">
    <if_sid>07500</if_sid>
    <id>^257</id>
    <match>completed.  No detections</match>
    <description>Virus scan completed with no viruses found</description>
  </rule>

  <rule id="07508" level="7">
    <if_sid>07500</if_sid>
    <match>scan was cancelled |has taken too long</match>
    <description>Virus scan cancelled</description>
  </rule>

  <rule id="07509" level="5">
    <if_sid>07500</if_sid>
    <match>scan was canceled because</match>
    <description>Virus scan cancelled due to shutdown</description>
  </rule>

  <rule id="07510" level="5">
    <if_sid>07500</if_sid>
    <match>update was successful</match>
    <description>Virus program or DAT update succeeded</description>
  </rule>

  <rule id="07511" level="7">
    <if_sid>07500</if_sid>
    <match>update failed</match>
    <description>Virus program or DAT update failed</description>
  </rule>

  <rule id="07512" level="7">
    <if_sid>07500</if_sid>
    <match>update was cancelled</match>
    <description>Virus program or DAT update cancelled</description>
  </rule>

  <rule id="07513" level="5">
    <if_sid>07504</if_sid>
    <match>contains the EICAR test file</match>
    <options>alert_by_email</options>
    <description>EICAR test file detected</description>
  </rule>

  <!-- Composite rules -->

  <rule id="07600" level="10" frequency="$MCAFEE_FREQ" timeframe="240">
    <if_matched_sid>07502</if_matched_sid>
    <description>Multiple McAfee AV warning events</description>
  </rule>

</group>

