<!-- Official Syslog rules for the OSSEC HIDS
  -  Author: Daniel B. Cid
  -  Date: Nov 11, 2005
  -->


  
<!-- Default variables for the OSSEC HIDS SYSLOG rules -->

<!-- OSSEC website -->
<var name="HTTP_OSSEC">http://www.ossec.net/logs</var>

<!-- Bad words matching. Any log containing these messages
  -  will be triggered.
  -->
<var name="BAD_WORDS">core_dumped|failure|error|attack|bad|illegal|denied|refused|unauthorized|fatal|Segmentation Fault|Corrupted</var>

<!-- System users. They should never log in to the system -->
<var name="SYS_USERS">apache|mysql|www|nobody|nogroup|portmap|named|rpc|mail|ftp|shutdown|bin|daemon|postfix|shell|info|guest|psql</var>




<!-- Syslog errors. -->
<group name="syslog,errors">
  <rule id="101" level="2">
    <regex>^PAM-securetty[\d+]: Couldn't open /etc/securetty$</regex>
    <description>File /etc/securetty missing. Root access unrestricted</description>
  </rule>

  <rule id="102" level="7" accuracy="0">
    <match>$BAD_WORDS</match>
    <description>Possible problem (unknown) somewhere in the system</description>
  </rule>    

  <rule id="103" level="13" maxsize="1012">
    <description>Non standard syslog message (size too large)</description>
  </rule>  
</group> <!-- SYSLOG,ERRORS -->



<!-- NFS messages -->
<group name="syslog,nfs">
  <!-- XXX All These NFS rules need to be fixed. I'm not an NFS fan and dont use it.. -->
  <rule id="202" level="4">
    <match>nfs: mount failure</match>
    <description>Unable to mount the NFS directory</description>
  </rule>

  <rule id="203" level="4">
    <regex>mount\.+reason given by server: Permission denied$</regex>
    <description>Unable to mount the NFS directory</description>
  </rule>
 
  <rule id="204" level="4">
    <match>^rpc.mountd: refused mount request from</match>
    <description>Unable to mount the NFS directory</description>
  </rule>
</group> <!-- SYSLOG,NFS -->
  
  

<!-- xinetd messages -->  
<group name="syslog,xinetd">
  <rule id="301" level="10">
    <regex>^xinetd[\d+]: Deactivating service \S+ due to excessive </regex>
    <description>Excessive number connections to a service</description>
  </rule>
</group> <!-- SYSLOG,XINETD -->



<!-- Access control messages -->
<group name="syslog,accesscontrol,connection_attempt">
  <rule id="400" level="0" noalert="1">
    <decoded_as>sshd</decoded_as>
    <description>SSHD messages grouped</description>
  </rule>
  
  <rule id="401" level="5">
    <match>FAILED LOGIN |authentication failure|</match>
    <match>Authentication failed for|invalid password for|</match>
    <match>Failed password for|LOGIN FAILURE ON |</match>
    <match>Wrong password given for user</match>
    <description>User missed the password</description>
  </rule>

  <rule id="402" level="10">
    <match>more authentication failures;|REPEATED login failures on</match>
    <description>User missed the password more than one time</description>
  </rule>

  <rule id="403" level="5">
    <regex>Connection from \.+denied|refused connect from</regex>
    <description>Connection blocked by Tcp Wrappers (or other ACL)</description>
  </rule>

  <rule id ="404" level="9">
    <if_sid>400</if_sid>
    <match>illegal user|invalid user</match>
    <description>Attempt to login using a non-existent user</description>
  </rule>

  <rule id ="405" level="12">
    <match>ILLEGAL ROOT LOGIN</match>
    <description>Illegal root login. Some verification is necessary</description>
  </rule>

  <rule id="406" level="3">
    <regex>^login[\d+]: ROOT LOGIN  on</regex>
    <description>Physical root login</description>
  </rule>  

  <rule id="407" level="9">
    <if_sid>401</if_sid>
    <user>root</user>
    <description>Authentication failed while logging in as root</description>
  </rule>  

  <rule id="408" level="10" frequency="8" timeframe="120" ignore="60">
    <if_sid>404</if_sid>
    <if_matched_sid>404</if_matched_sid>
    <description>SSHD brute force trying to get access to the system</description>
  </rule>

  <rule id="409" level="0">
    <if_sid>400</if_sid>
    <regex>authentication failure; logname= uid=0 euid=0 </regex>
    <regex>tty=ssh ruser= rhost\S+$</regex>
    <description>Useless SSHD message without a user associated</description>
  </rule>

  <rule id="410" level="10" frequency="5" timeframe="240">
    <if_sid>401</if_sid>
    <if_matched_sid>401</if_matched_sid>
    <description>Multiple authentication failures</description>
  </rule>
</group> <!-- SYSLOG,ACESSCONTROL -->



<!-- Sendmail messages -->
<group name="syslog,sendmail">
  <rule id="501" level="6">
    <regex>;ruleset=check_rcpt \.+Relaying denied</regex>
    <description>Relay attempt</description>
  </rule>

  <rule id="502" level="12">
    <match>Cannot mail directly to </match>
    <description>Attempt to remotely create a file on the system</description>
  </rule>
</group> <!-- SYSLOG,SENDMAIL -->
  


<!-- FTP messages -->
<group name="syslog,ftp">
  <rule id="601" level="5">
    <match>FTP LOGIN REFUSED</match>
    <description>FTP Connection blocked by TCP Wrappers (or attempt to use an anonymous user on a FTP)</description>
  </rule>

  <rule id="602" level="0">
    <regex>ftpd\.+of \.+created</regex>
    <description>User created a direcotory via FTP</description>
  </rule>
  
   <rule id="603" level="0">
    <regex>ftpd\.+of \.+ deleted</regex>
    <description>User deleted a direcotory via FTP</description>
  </rule>
</group> <!-- SYSLOG,FTP -->



<!-- Smartd messages -->
<group name="syslog,smartd">
  <rule id="700" level="0" noalert="1">
    <match>^smart</match>
    <description>Pre-match rule for smartd</description>
  </rule>
  
  <rule id="701" level="0">
    <if_sid>700</if_sid>
    <match>No configuration file /etc/smartd.conf found</match>
    <description>Smartd Started but not configured</description>
  </rule>

  <rule id="702" level="0">
    <if_sid>700</if_sid>
    <regex>^smartd\.+Unable to register ATA device</regex>
    <description>Smartd configuration problem</description>
  </rule>

  <rule id ="703" level="0">
    <if_sid>700</if_sid>
    <regex>^smartd\.+No such device or address, open\(\) failed</regex>
    <description>Device configured but not available to Smartd</description>
  </rule>  
</group> <!-- SYSLOG,SMARTD -->



<!-- Linux Kernel messages -->
<group name="syslog,linuxkernel">
  <rule id="800" level="0" noalert="1">
    <match>^kernel: </match>
    <description>Pre-match rule for kernel messages</description>
  </rule>

  <rule id="801" level="0">
    <if_sid>800</if_sid>
    <match>^kernel: PCI: if you experience problems, try using option</match>
    <description>Informative message from the kernel (generally ignored</description>
  </rule>

  <rule id="802" level="0">
    <if_sid>800</if_sid>
    <match>^modprobe: Can't locate module sound</match>
    <description>Informative message from the kernel</description>
  </rule>
  
  <rule id ="803" level="9">
    <if_sid>800</if_sid>
    <match>^kernel: Oversized packet received from</match>
    <description>Error message from the kernel. Ping of death attack.</description>
  </rule>  

  <rule id = "804" level="8">
    <if_sid>800</if_sid>
    <regex>^kernel: \S+: Promiscuous mode enabled|</regex>
    <regex>^kernel: device \S+ entered promiscuous mode</regex>
    <description>Interface entered in promiscuous mode (sniffing enabled)</description>
  </rule>

  <rule id="805" level="0">
    <if_sid>800</if_sid>
    <match>^kernel: end_request: I/O error, dev fd0, sector 0|</match>
    <match>^kernel: Buffer I/O error on device fd0, logical block 0</match>
    <description>Invalid I/O request to /dev/fd0 (bug on the 2.6 kernel?)</description>
  </rule>

  <rule id="806" level="0">
    <if_sid>800</if_sid>
    <match>^kernel: svc: unknown program 100227 (me 100003)</match>
    <description>NFS incompability between Linux and Solaris. Ignoring.</description>
  </rule>

  <rule id="807" level="0">
    <if_sid>800</if_sid>
    <match>^kernel: svc: bad direction </match>
    <description>NFS incompability between Linux and Solaris. Ignoring.</description>
  </rule>
</group> <!-- SYSLOG,LINUXKERNEL -->



<!-- Cron messages -->
<group name="syslog,cron">
  <rule id="901" level="0">
    <regex>^crond: unable to exec \.+ output to sink null</regex>
    <description>Wrong crond configuration</description>
  </rule>
</group> <!-- SYSLOG,CRON -->



<!-- Automount messages -->
<group name="syslog,automount">
  <rule id="951" level="2">
    <regex>^automount[\d+]: \S+: lookup for \S+ failed</regex>
    <description>Automount informative message</description>
    <info>http://www.cs.arizona.edu/computer.help/policy/DIGITAL_unix/AA-PS2SC-TE_html/netadmin24.html</info>
  </rule>
</group> <!-- SYSLOG,AUTOMOUNT -->



<!-- Su messages -->
<group name="syslog,su">
  <rule id="1100" level="0" noalert="1">
    <decoded_as>su</decoded_as>
    <description>Initial matching for su messages</description>
  </rule>
  
  <rule id ="1101" level="5">
   <if_sid>1100</if_sid>
   <match>: authentication failure; | failed |BAD su</match>
   <description>User missed the password to change UID (user id)</description> 
  </rule>

  <rule id ="1102" level="9">
    <user>root</user>
    <if_sid>1101</if_sid>
    <description>User missed the password to change UID to root</description>
  </rule>

  <rule id="1103" level="3">
    <if_sid>1100</if_sid>
    <regex>session opened for user root|</regex>
    <regex>^su[\d+]: + \S+ \S+-root$</regex>
    <description>User sucessfully changed UID to root</description>
  </rule>
</group> <!-- SYSLOG,SU -->



<!-- Tripwire messages -->
<group name="syslog,tripwire">
  <rule id="1201" level="8">
    <regex>tripwire\.+ Integrity Check failed: File could not</regex>
    <description>Problems with the tripwire checking</description>
  </rule>
</group> <!-- SYSLOG,TRIPWIRE -->



<!-- Adduser messages -->
<group name="syslog,adduser">
  <rule id="1301" level="12">
    <regex>^useradd[\d+]: new group:|</regex>
    <regex>^groupadd[\d+]: new group:|</regex>
    <regex>^adduser[\d+]: new group:</regex>
    <description>New group added to the system</description>
  </rule>

  <rule id="1302" level="8">
    <regex>^adduser[\d+]: new user:|</regex>
    <regex>^useradd[\d+]: new user:</regex>
    <description>New user added to the system</description>
  </rule>

  <rule id="1303" level="2">
    <regex>^userdel[\d+]: delete user|</regex>
    <regex>^userdel[\d+]: remove group|</regex>
    <regex>^groupdel[\d+]: remove group</regex>
    <description>Group (or user) deleted from the system</description>
  </rule>

  <rule id="1304" level="8">
    <regex>^chfn[\d+]: changed user</regex>
    <description>Information from the user was changed</description>
  </rule>
</group> <!-- SYSLOG,ADDUSER -->



<!-- Sudo messages -->
<group name="syslog,sudo">
  <rule id="1400" level="0" noalert="1">
    <decoded_as>sudo</decoded_as>
    <description>Initial match for sudo messages</description>
  </rule>
  
  <rule id="1401" level="10">
    <if_sid>1400</if_sid>
    <regex>^sudo:\s+\S+ : 3 incorrect password attempts</regex>
    <description>Three failed attempts to run sudo</description>
  </rule>

  <rule id="1402" level="3">
    <if_sid>1400</if_sid>
    <regex>^sudo:\s+\S+ : TTY=\S+ ; PWD=\S+ ; USER=root ; COMMAND=</regex>
    <description>Sucessful sudo to ROOT executed</description>
  </rule>
</group> <!-- SYSLOG, SUDO -->



<!-- SSHD messages -->
<group name="syslog,sshd">
  <rule id="1501" level="12">
    <if_sid>400</if_sid>
    <regex>Bad protocol version identification</regex>
    <description>Possible attack on the ssh server(or version gathering)</description>
  </rule>

  <rule id="1502" level="5">
    <if_sid>400</if_sid>
    <regex>reverse mapping \w+ \w+ for \S+ failed - POSS</regex>
    <description>Reverse lookup error (bad ISP or possible attack)</description>
  </rule>

  <rule id="1503" level="10" frequency="4" timeframe="360">
    <if_sid>1502</if_sid>
    <if_matched_sid>1502</if_matched_sid>
    <description>Possible breakin attempt (high reverse lookup errors)</description>
  </rule>
</group> <!-- SYSLOG, SSHD -->



<!-- Attack signatures -->
<group name="syslog,attacks">
  <rule id="1601" level="12"> <!-- XXX SSH CONNECTION/LOGIN -->
    <if_sid>400</if_sid>
    <regex>Accepted password for|session opened for user</regex>
    <user>$SYS_USERS</user>
    <description>System user sucessfully logged on the system</description>
  </rule>

  <rule id="1602" level="14">
    <regex>^rpc.statd[\d+]: gethostbyname error for \W+</regex>
    <description>Buffer overflow attack on rpc.statd</description>
  </rule>

  <rule id="1603" level="14">
    <regex>ftpd[\d+]: \S+ FTP LOGIN FROM \.+ 0bin0sh</regex>
    <description>Buffer overflow on WU-FTPD versions prior to 2.6</description>
  </rule>

  <rule id="1604" level="13">
    <match>?????????????????????</match>
    <description>Unkown buffer overflow attempt</description>
  </rule>

  <rule id="1605" level="12">
    <match>changed by \(\(null\)</match>
    <description>"Null" user changed some information</description>
  </rule>

  <rule id="1606" level="12">
    <regex>@@@@@@@@@@@@@@@@@@@@@@@@\.+/bin/sh</regex>
    <description>Buffer overflow attack (probably on yppasswd)</description>
  </rule>

  <rule id="1607" level="14">
    <regex>cachefsd: Segmentation Fault - core dumped|</regex>
    <regex>inetd[\d+]: \S+cachefsd: Segmentation Fault - core dumped</regex>
    <description>Heap overflow in the Solaris cachefsd service</description>
    <cve>2002-0033</cve>
  </rule>

  <rule id="1608" level="14" timeframe="120">
    <if_sid>400</if_sid>
    <if_matched_regex>^sshd[\d+]: \.+Corrupted check by bytes on</if_matched_regex>
    <regex>^sshd[\d+]: fatal: Local: crc32 compensation attack</regex>
    <description>SSH CRC-32 Compensation attack</description>
    <cve>2001-0144</cve>
    <info>http://www.securityfocus.com/bid/2347/info/</info>
  </rule>

  <rule id="1609" level="12">
    <match>attempt to execute code on stack by</match>
    <description>Stack overflow attempt or program exiting with SEGV</description>
    <info>http://snap.nlc.dcccd.edu/reference/sysadmin/julian/ch18/389-392.html</info>
  </rule>

  <rule id="1610" level="10" timeframe="120" frequency="8" ignore="60">
    <if_level>6</if_level>
    <same_source_ip></same_source_ip>
    <description>Multiple events from same source ip (8 within 2 minutes)</description>
  </rule>  
</group> <!-- SYSLOG, ATTACKS -->



<!-- Privilege scalation messages -->
<group name="syslog,elevation_of_privilege">
  <rule id="1701" level="15" timeframe="300">
    <if_group>adduser</if_group>
    <if_matched_group>attacks</if_matched_group>
    <description>Possible attack followed by the addition of an user</description>
  </rule>
</group> <!-- SYSLOG, ELEVATION_OF_PRIVILEGE -->



<!-- Scan signatures -->
<group name="syslog,scans">
  <rule id="1801" level="10" frequency="7" timeframe="90" ignore="60">
    <if_group>connection_attempt</if_group>
    <description>Horizontal scan on the network</description>
    <same_source_ip></same_source_ip>
    <info>http://project.honeynet.org/papers/enemy2/</info>
  </rule>
</group> <!-- SYSLOG,SCANS -->



<!-- PPTP messages -->
<group name="syslog,pptp">
  <rule id="2601" level="0">
    <match>^pptp[</match>
    <regex>^pptpd[\d+]: GRE: \S+ from \S+ failed: status = -1 </regex>
    <regex>error = \S+</regex>
    <description>PPTPD failed message (communication error)</description>
    <info>http://poptop.sourceforge.net/dox/gre-protocol-unavailable.phtml</info>
  </rule>
</group>



<!-- Syslog FTS -->
<group name="syslog,fts">
  <rule id="2701" level="8">
    <if_fts></if_fts>
    <description>First time syslog event received (see decoders)</description>
  </rule>
</group>
                


