  -  Author: Daniel B. Cid
  -  Date: Apr 20, 2006
  -->
      

<group name="ids">
  <rule id="7000" level="0">
    <category>firewall</category>
    <description>Firewall rules grouped.</description>
  </rule>

  <!-- We don't log firewall events, because they go
    -  to their own log file.
    -->
  <rule id="7001" level="5">
    <if_sid>7000</if_sid>
    <action>DROP</action>
    <options>no_log</options>
    <description>Firewall drop event.</description>
  </rule>

  <rule id="7051" level="10" frequency="16" timeframe="45" ignore="240">
    <if_sid>7001</if_sid>
    <same_source_ip />
    <description>Multiple Firewall drop events from same source.</description>
  </rule>  
</group>
